{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "env":{
            "code_files": "${workspaceFolder}\\src\\Broker.cpp ${workspaceFolder}\\src\\Message.cpp ${workspaceFolder}\\src\\pmmq.cpp"
        }
    },
    "tasks": [
        {
            "label": "task_create_out_directory",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "type": "shell",
            "command": [
                "cmd.exe",
                "/c",
                "\"IF NOT EXIST \"out\" mkdir \"out\"\""
            ],
            "group": "none",
            "presentation": {
                "echo": true,
                "reveal": "always",
                //"focus": false,
                //"panel": "shared",
                "showReuseMessage": false,
                "clear": true 
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "msvc_build_debug",
            "options": {
                "cwd": "${workspaceFolder}/out"
            },
            "dependsOn":["task_create_out_directory"],
            "type": "shell",
            "command": "cl.exe",
            "args": [
                "/EHsc",
                "/Zi",
                "/W4",
                //"/w14514",
                "/I${workspaceFolder}\\inc",
                    // include must always be with backslashes 'cause the compiler does not comprendre otherwise
                "/Fe:",
                "pmmq.exe",
                "${workspaceFolder}\\src\\Broker.cpp",
                "${workspaceFolder}\\src\\Message.cpp",
                    // insert additional files before this line

                "${workspaceFolder}\\src\\pmmq.cpp",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                //"echo": true,
                "reveal": "always",
                //"focus": false,
                //"panel": "shared",
                "showReuseMessage": false,
                "clear": true 
            },
            "problemMatcher": "$msCompile",
        },
        {
            "label": "msvc_build_tests_debug",
            "options": {
                "cwd": "${workspaceFolder}/out"
            },
            "dependsOn":["task_create_out_directory"],
            "type": "shell",
            "command": "cl.exe",
            "args": [
                "/EHsc",
                "/Zi",
                "/W4",
                //"/w14514",
                "/I${workspaceFolder}\\ext\\inc",
                "/I${workspaceFolder}\\inc",
                    // include must always be with backslashes 'cause the compiler does not comprendre otherwise
                "/Fe:",
                "pmmq_test.exe",
                "${workspaceFolder}\\src\\Broker.cpp",
                "${workspaceFolder}\\src\\Message.cpp",
                    // insert additional files before this line

                "${workspaceFolder}/tst/test1.cpp",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                //"echo": true,
                "reveal": "always",
                //"focus": false,
                //"panel": "shared",
                "showReuseMessage": false,
                "clear": true 
            },
            "problemMatcher": "$msCompile",
        }
    ]
}